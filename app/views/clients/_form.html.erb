<div class='col-sm-4 col-sm-offset-4'>
  <hr>
  <%= form_with(model: client, local: true) do |f| %>
    <% if client.errors.any? %>
      <div id="error_explanation">
        <h2 class='text-center'><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
        <hr>
        <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :first_name, placeholder: 'First name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.date_field :date_of_birth, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :medical_condition, placeholder: 'Medical condition', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  <% end %>
</div>
